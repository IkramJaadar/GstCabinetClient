
@model Patient
@{
    if (Context.Session.GetInt32("Idispo") == null || Context.Session.GetInt32("Idmed")==null)
    {
        Context.Response.Redirect("/Home/Index");
    }
}
<div class="col-md-6 col-sm-6">
    <!-- CONTACT FORM HERE -->
    <form id="appointment-form" role="form" method="post" action="#">

        <!-- SECTION TITLE -->
        <div class="section-title wow fadeInUp" data-wow-delay="0.4s">
            <h2>Prenez Rendez-Vous</h2>
        </div>

        <div class="wow fadeInUp" data-wow-delay="0.8s">
            @if (Context.Session.GetInt32("Id") == null)
            {
                <div class="col-md-6 col-sm-6">
                    <label for="name">Nom</label>
                    <input type="text" class="form-control"  asp-for="Nom" placeholder="Nom">
                    <span asp-validation-for="Nom"></span>
                </div>

                <div class="col-md-6 col-sm-6">
                    <label for="name">Prenom</label>
                    <input type="text" class="form-control"  asp-for="Prenom" placeholder="Prenom">
                    <span asp-validation-for="Prenom"></span>
                </div>

                <div class="col-md-6 col-sm-6">
                    <label for="name">Adresse</label>
                    <input type="text" class="form-control"  asp-for="Adresse" placeholder="Adresse">
                    <span asp-validation-for="Adresse"></span>
                </div>
                <div class="col-md-6 col-sm-6">
                    <label for="name">Telephone</label>
                    <input type="text" class="form-control"asp-for="Telephone" placeholder="Telephone">
                    <span asp-validation-for="Telephone"></span>
                </div>
                <div class="col-md-6 col-sm-6">
                    <label for="name">Email</label>
                    <input type="email" class="form-control"  asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="col-md-6 col-sm-6">
                    <label for="name">Password</label>
                    <input type="password" class="form-control"  asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>


                <div class="col-md-6 col-sm-6">
                    <label for="select">Sexe</label>
                    <select class="form-control" asp-for="Sexe">
                        <option>Homme</option>
                        <option>Femme</option>

                    </select>
                    <span asp-validation-for="Sexe"></span>
                </div>
                <div class="col-md-6 col-sm-6">
                    <label for="name">Date Naissance</label>
                <input type="date" class="form-control" id="name" asp-for="DateNaissance" placeholder="Date Naissance">
                <span asp-validation-for="DateNaissance"></span>
            </div>

            }
            <div class="col-md-12 col-sm-12"><br />
                
                <button type="submit" class="form-control btn btn-success" id="cf-submit" name="submit">Valider le rendez vous</button>
            </div>
        </div>
    </form>
</div>

             